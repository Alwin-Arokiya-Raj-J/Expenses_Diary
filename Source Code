using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using System.Data.SqlClient;
using System.Collections;
using System.Security.Cryptography.X509Certificates;
using System.Data;
using System.Drawing;
using System.Runtime.InteropServices;
using System.Web.UI.WebControls;
using System.Web.Security;

namespace protodo.Controllers
{
    public class MainController : Controller
    {
        
        public ActionResult newuser()
        {


            SqlConnection con = new SqlConnection("Database=todo;Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Integrated Security=true");

            string firstname = Request.Form["fname"];
            string lastname = Request.Form["lname"];
            string gender = Request.Form["radiogroup"];
            if (string.IsNullOrEmpty(firstname))
            {
                Response.Write("");
                return View();

            }
            if (string.IsNullOrEmpty(gender))
            {
                Response.Write("Please Select Your Gender");
                return View();

            }
            string userid = Request.Form["userid"];
            string password = Request.Form["pass"];
            string cpassword = Request.Form["cpass"];
            if (password != cpassword)
            {
                TempData["match"]="Password And Comfirm Passwords Are must match";
                return View();

            }
            con.Open();
            string qr1 = "select userid from newuser where userid=@userid";
            SqlDataAdapter da = new SqlDataAdapter(qr1, con);
            da.SelectCommand.Parameters.AddWithValue("userid", userid);
            DataTable dt = new DataTable();
            da.Fill(dt);
            if (dt.Rows.Count > 0)
            {
                TempData["alertmessage"] = "User Name Already Taken...";               
                return View();

            }

            else
            {

                string qr = "insert into newuser(firstname,lastname,gender,userid,password) values(@firstname,@lastname,@gender,@userid,@password)";
                SqlCommand cmd = new SqlCommand(qr, con);
                cmd.Parameters.AddWithValue("firstname", firstname);
                cmd.Parameters.AddWithValue("lastname", lastname);
                cmd.Parameters.AddWithValue("gender", gender);
                cmd.Parameters.AddWithValue("userid", userid);
                cmd.Parameters.AddWithValue("password", password);
                cmd.ExecuteNonQuery();
                TempData["al"] = "inserted Successfully...";


            }
            return View();
        }
        public ActionResult login()
        {           
           
                return View();
        }     
        public ActionResult logout() 
        {
            SqlConnection con = new SqlConnection("Database=todo;Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Integrated Security=true");
            con.Open();
            string userid = Request.Form["userid"];            
            string password = Request.Form["pass"];
            string qr1 = "select userid,password from newuser where userid=@userid and password=@password";
            SqlDataAdapter da = new SqlDataAdapter(qr1, con);
            da.SelectCommand.Parameters.AddWithValue("userid", userid);
            da.SelectCommand.Parameters.AddWithValue("password", password);
            DataTable dt = new DataTable();
            da.Fill(dt);
            if (dt.Rows.Count > 0)
            {
                return RedirectToAction("Mainpage");
            }           
            return View();
        
        }
       public ActionResult Mainpage()
        {
            return View();
        }     

        public ActionResult expences(FormCollection collection)
        {
            try
            {
                SqlConnection con = new SqlConnection("Database=todo;Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Integrated Security=true");
                con.Open();
                string userid = collection["user1"];
                if(string.IsNullOrEmpty(userid))
                {
                    TempData["war"] = "";
                    return View();
                }
                string date = collection["time"];
                if (string.IsNullOrEmpty(date))
                {
                    TempData["war"] = "date not be empty";
                    return View();
                }
                string shopname = Request.Form["shop"];
                if (string.IsNullOrEmpty(shopname))
                {
                    TempData["war"] = "shopname not be empty";
                    return View();
                }
                string things = Request.Form["things"];
                if (string.IsNullOrEmpty(userid))
                {
                    TempData["war"] = "Things not be empty";
                    return View(); 
                }
                string amount = Request.Form["amount"];
                if (string.IsNullOrEmpty(amount))
                {
                    TempData["war"] = "Amount not be empty";
                    return View();
                }
                string reason = Request.Form["reason"];
                if (string.IsNullOrEmpty(reason))
                {
                    TempData["war"] = "Reason not be empty";
                    return View();
                }
                else
                {
                    string qr = "insert into expences(userid,buydate,shopname,things,amount,reason) values(@userid,@date,@shopname,@things,@amount,@reason)";
                    SqlCommand cmd = new SqlCommand(qr, con);
                    cmd.Parameters.AddWithValue("userid", userid);
                    cmd.Parameters.AddWithValue("date", date);
                    cmd.Parameters.AddWithValue("shopname", shopname);
                    cmd.Parameters.AddWithValue("things", things);
                    cmd.Parameters.AddWithValue("amount", amount);
                    cmd.Parameters.AddWithValue("reason", reason);
                    cmd.ExecuteNonQuery();
                    TempData["ans"] = "Inserted SuccessFully";
                    
                }

                return View();
               
            }
            catch (Exception ex)
            {
                TempData["fild"] = "faild"+ex.Message;
            }

            return View();
        }
       public ActionResult About()
        {
            return View();
        }
        public ActionResult Display(FormCollection collection)
        {
            try
            {
                string userid = collection["userid"];

                string connectionString = "Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Initial Catalog=todo;Integrated Security=True";
                string query = "SELECT * FROM expences WHERE userid=@userid";

                using (SqlConnection con = new SqlConnection(connectionString))
                {
                    con.Open();
                    SqlCommand cmd = new SqlCommand(query, con);
                    cmd.Parameters.AddWithValue("@userid", userid);

                    SqlDataAdapter da = new SqlDataAdapter(cmd);
                    DataTable dt = new DataTable();
                    da.Fill(dt);

                    if (dt.Rows.Count > 0)
                    {
                        ViewBag.Userdata = dt;
                        return View();
                    }
                    else
                    {
                        ViewBag.ErrorMessage = "No data found for the given user ID.";
                    }
                }
            }
            catch (Exception ex)
            {
                ViewBag.ErrorMessage = "An error occurred: " + ex.Message;
            }

            return View();
        }

        public ActionResult search(FormCollection collection)
        {
            try
            {
                string userid = collection["userid"];
                string fromdate = Request.Form["fromdate"];
                string todate = Request.Form["todate"];
                string shopname = Request.Form["shopname"];                

                string connectionString = "Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Initial Catalog=todo;Integrated Security=True";
                string query = "select*from expences where userid='alwin123' and buydate >=@fromdate and buydate <=@todate or shopname=@shopname";

                using (SqlConnection con = new SqlConnection(connectionString))
                {
                    con.Open();
                    SqlCommand cmd = new SqlCommand(query, con);
                    cmd.Parameters.AddWithValue("@userid", userid);
                    cmd.Parameters.AddWithValue("@fromdate", fromdate);
                    cmd.Parameters.AddWithValue("@todate", todate);
                    cmd.Parameters.AddWithValue("@shopname", shopname);

                    SqlDataAdapter da = new SqlDataAdapter(cmd);
                    DataTable dt = new DataTable();
                    da.Fill(dt);

                    if (dt.Rows.Count > 0)
                    {
                        ViewBag.Userdata = dt;
                        return View();
                    }
                    else
                    {
                        ViewBag.ErrorMessage = "No data found for the given user ID.";
                    }
                }
            }
            catch (Exception ex)
            {
                ViewBag.ErrorMessage = "An error occurred: " + ex.Message;
            }


            return View();
        }
        public ActionResult totalamount(FormCollection collection)
        {
            try
            {
                string userid = collection["userid"];
                string fromdate = Request.Form["fromdate"];
                string todate = Request.Form["todate"];

                string connectionString = "Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Initial Catalog=todo;Integrated Security=True";
                string query = "select sum(amount) from expences where userid=@userid and buydate>=@fromdate and buydate<=@todate";

                using (SqlConnection con = new SqlConnection(connectionString))
                {
                    con.Open();
                    SqlCommand cmd = new SqlCommand(query, con);
                    cmd.Parameters.AddWithValue("@userid", userid);
                    cmd.Parameters.AddWithValue("@fromdate", fromdate);
                    cmd.Parameters.AddWithValue("@todate", todate);

                    SqlDataAdapter da = new SqlDataAdapter(cmd);
                    DataTable dt = new DataTable();
                    da.Fill(dt);

                    if (dt.Rows.Count > 0)
                    {
                        ViewBag.Userdata = dt;
                        return View();
                    }
                    else
                    {
                        ViewBag.ErrorMessage = "No data found for the given user ID.";
                    }
                }
            }
            catch (Exception ex)
            {
               
            }

            return View();
        }
       
        public ActionResult total(FormCollection collection,string button)
        {
            try
            {
                string userid = collection["userid"];               

                string connectionString = "Data Source=DESKTOP-4JAHEO9\\SQLEXPRESS;Initial Catalog=todo;Integrated Security=True";
                string query = "select sum(amount) from expences where userid=@userid";

                using (SqlConnection con = new SqlConnection(connectionString))
                {
                    con.Open();
                    SqlCommand cmd = new SqlCommand(query, con);
                    cmd.Parameters.AddWithValue("@userid", userid);                  

                    SqlDataAdapter da = new SqlDataAdapter(cmd);
                    DataTable dt = new DataTable();
                    da.Fill(dt);

                    if (dt.Rows.Count > 0)
                    {
                        ViewBag.Userdata = dt;
                        return View();
                    }
                    else
                    {
                        ViewBag.ErrorMessage = "No data found for the given user ID.";
                    }
                }
            }
            catch (Exception ex)
            {

            }

            return View();
        }
        


